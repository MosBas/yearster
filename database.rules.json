{
  "rules": {
    "games": {
      "$gameId": {
        ".read": "true",
        ".write": "!data.exists() || data.child('status').val() === 'lobby' || data.child('players').hasChild(auth.uid) || true",
        "createdAt": {
          ".validate": "now - newData.val() < 3600000"
        }
      }
    }
  }
}
